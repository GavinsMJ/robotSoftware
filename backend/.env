# Docker: Environment variables in Compose

## NginX
OR_NGINX_HTTP_PORT=80
OR_NGINX_SSL_PORT=443
OR_NGINX_MQTT_PORT=1883
OR_NGINX_MQTTS_PORT=8883

## Nats
OR_NATS_PORT=4222
OR_NATS_URL=nats://broker:${OR_NATS_PORT}

# Message Broker
OR_BROKER_TYPE=nats
OR_BROKER_URL=${OR_NATS_URL}

## Redis
OR_REDIS_TCP_PORT=6379

## Grafana
OR_GRAFANA_PORT=3000

## Jaeger
OR_JAEGER_PORT=6831
OR_JAEGER_FRONTEND=16686
OR_JAEGER_COLLECTOR=14268
OR_JAEGER_CONFIGS=5778
OR_JAEGER_URL=jaeger:6831

## Core Services

### Auth
OR_AUTH_LOG_LEVEL=debug
OR_AUTH_HTTP_PORT=8189
OR_AUTH_GRPC_PORT=8181
OR_AUTH_GRPC_URL=auth:8181
OR_AUTH_GRPC_TIMEOUT=1s
OR_AUTH_DB_PORT=5432
OR_AUTH_DB_USER=omicron
OR_AUTH_DB_PASS=omicron
OR_AUTH_DB=auth
OR_AUTH_SECRET=secret
OR_AUTH_LOGIN_TOKEN_DURATION=10h

### Keto
